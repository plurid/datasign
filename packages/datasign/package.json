{
    "name": "@plurid/datasign",
    "version": "0.0.0-0",
    "description": "CLI for single source of truth data specificator",
    "keywords": [
        "datasign"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/datasign"
    },
    "bugs": {
        "email": "source@plurid.com",
        "url": "https://github.com/plurid/datasign/issues"
    },
    "homepage": "https://github.com/plurid/datasign/blob/master/packages/datasign/README.md",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=12",
        "npm": ">=6"
    },
    "main": "distribution/index.js",
    "module": "distribution/index.es.js",
    "typings": "distribution/index.d.ts",
    "bin": {
        "datasign": "binary/datasign"
    },
    "files": [
        "distribution",
        "binary"
    ],
    "preferGlobal": false,
    "scripts": {
        "test": "jest --coverage",
        "test:watch": "jest --coverage --watch",
        "test:prod": "npm run lint && npm run test -- --no-cache",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "documentation": "typedoc --out documentation --target es6 --theme minimal --mode file source",
        "start": "rollup -c rollup.config.ts -w",
        "build.clean": "rm -rf `find ./distribution/ -type d -name __tests__`",
        "build.development": "rollup -c rollup.config.ts && yarn build.clean",
        "build": "ENV_MODE=local rollup -c rollup.config.ts && yarn build.clean",
        "prebuild": "rimraf distribution",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "@plurid/datasign-compiler": "^0.0.0-0",
        "commander": "^5.0.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-json": "^4.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@rollup/plugin-replace": "^2.3.1",
        "@types/inquirer": "^6.5.0",
        "@types/node": "^13.9.3",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "colors": "^1.4.0",
        "coveralls": "^3.0.11",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "jest": "^25.1.0",
        "jest-config": "^25.1.0",
        "prompt": "^1.0.0",
        "replace-in-file": "^5.0.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.1.0",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-peer-deps-external": "^2.2.2",
        "rollup-plugin-sourcemaps": "^0.5.0",
        "rollup-plugin-typescript2": "^0.26.0",
        "shelljs": "^0.8.3",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.8.1",
        "typedoc": "^0.17.3",
        "typescript": "^3.8.3"
    }
}
